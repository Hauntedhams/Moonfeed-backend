# Example environment variables for backend

# Dexscreener
DEXSCREENER_BASE_URL=https://api.dexscreener.com

# Pump.fun (scraped)
PUMPFUN_RECENT_URL=https://pump.fun/recent
PUMPFUN_GRADUATED_URL=https://pump.fun/graduated

# Solana RPC (fallback)
SOLANA_RPC=https://api.mainnet-beta.solana.com

# Helius
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_API_KEY=YOUR_KEY

# Redis / Postgres
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgres://user:pass@localhost:5432/moonfeed

# Helius Webhook (external URL your server is reachable at)
HELIUS_WEBHOOK_PUBLIC_URL=https://your-domain.com/api/webhook/helius
HELIUS_WEBHOOK_SECRET=CHANGE_ME_SECRET

# Security / Rate Limiting
API_KEY=CHANGE_ME_API_KEY
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300

# Graceful shutdown timeout (ms)
SHUTDOWN_TIMEOUT_MS=10000

# Circulating supply computation (optional)
BURN_ADDRESSES=11111111111111111111111111111111
SUPPLY_MAX_MINTS=400
SUPPLY_REFRESH_MINUTES=60

# Liquidity Lock Detection
# Comma-separated list of known locker / vesting contract addresses (Add popular lockers or burn vaults)
LOCKER_ADDRESSES=Lockr111111111111111111111111111111111111111,Lockr22222222222222222222222222222222222222
BIRDEYE_API_KEY=your_birdeye_api_key_here
